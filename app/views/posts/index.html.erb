<p id="notice"><%= notice %></p>
<div class="ml-3">
<div class="column">
<%= link_to 'New Post', new_post_path %><br />
<%= link_to "Sign in", new_session_path(:user) %><br />

<%= button_to "logout", destroy_user_session_path, method: :delete  %>
</div>
</div>

<% @posts.each do |post| %>
<div class="box">
    <article class="media">
        <div class="media-left">
            <figure class="image is-64x64">
                <%
=begin%>
                <%= gravatar_image_tag(tweeet.user.email, size: 64, alt: tweeet.user.name) %>
                <%
=end%>
            </figure>
        </div>
        <div class="media-content">
            <div class="content">
                	<% if user_signed_in? %>
                <strong><%= post.user.name %></strong><br />
                 <small><%= post.user.username %></small><br />

    	<% else %>
       <strong> Anonymous</strong><br />
      <% end %>
                <p><%= post.body %></p>
            </div>
        </div>
    </article>
</div>
<% end %>
<br>
