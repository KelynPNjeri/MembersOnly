<h2>Welcome Home</h2>
<% @posts.each do |post| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%= gravatar_image_tag(post.user.email, size: 64, alt: post.user.name) %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= post.user.name %></strong><br />
          <small><%= post.user.username %></small><br/>
          <p><%= post.post %></p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to post, class: 'level-item' do %>
                            <span class="icon">
                                <i class="fa fa-link" aria-hidden="true"></i>
                            </span>
            <% end %>
            <%= link_to edit_post_path(post), class: 'level-item' do %>
                            <span class="icon">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </span>
            <% end %>
            <%= link_to post, method: :delete, data: {confirm: "Are you want to delete this post?"}, class: 'level-item' do %>
                            <span class="icon">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </span>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>
</div>